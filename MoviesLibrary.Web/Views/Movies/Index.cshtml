@{
    ViewBag.Title = "Movies Library";
}
@model IndexVM
@section Scripts {
    <script src="/JavaScript/Rollover.js"></script>
    <script>
        $(function(){
            $("tbody>tr").on("click", function(){    // Click handler for the table row
                var mID = $(this).data("id");
                if (mID)
                    window.location.href = "@Url.Action("details", "movies")?id=" + mID;
            });
        });
    </script>
}

<h2>Movie List</h2>
<div class="col-md-12">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Genre</th>
                <th>Release Date</th>
                <th>Runtime (mins)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model.Movies)
            {
                <tr data-id="@movie.Id">
                    <td>@movie.Title</td>
                    <td>@String.Join(",", movie.Genres)</td>
                    <td>@movie.ReleaseDate.ToShortDateString()</td>
                    <td>@movie.Runtime</td>
                </tr>
            }
        </tbody>
    </table>
</div>
