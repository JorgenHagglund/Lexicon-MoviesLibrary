@model MoviesLibrary.Web.Models.Movie
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, MoviesLibrary.Web
<!DOCTYPE html>
<html>
<head>
    <title>Details about @Model.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <bootstrap-css />
    <link rel="stylesheet" type="text/css" href="/CSS/styles.css" />
    <script src="https://code.jquery.com/jquery-3.7.1.slim.min.js"></script>
    <bootstrap-js />
</head>
<body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "Movies")">Movies Library</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <a class="nav-link" href="@Url.Action("Index", "Movies")">Home</a>
                <a class="nav-link" href="@Url.Action("Add", "Movies")">Add Movie</a>
            </div> 
        </div>
    </nav>
    <div class="container-flex">
        <div class="row">
            <div class="col-md-3">
                <img src="@Url.Content(Model.PosterUrl)" alt="Movie Poster" class="img-fluid" />
            </div>
            <div class="col-md-8">
                <h1>Details about @Model.Title</h1>
                <p><strong>Title:</strong> @Model.Title</p>
                <p><strong>Genre:</strong> @String.Join(", ", Model.Genres)</p>
                <p><strong>Release Date:</strong> @Model.ReleaseDate.ToShortDateString()</p>
                <p><strong>Runtime:</strong> @Model.Runtime minutes</p>
            </div>
        </div>
    </div>
</body>
</html>